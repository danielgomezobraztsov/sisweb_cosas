{
  "$schema": "https://json-schema.org/draft/2020-12/schema#",
  "$id": "http://example.com/schemas/movie.schema.json",
  "type": "object",
  "title": "Peliculas",
  "description": "Info de Peliculas",
  "required": [
    "nombre",
    "descripcion",
    "year",
    "actores",
    "directores",
    "score"
  ],
  "properties": {
    "nombre": {
      "type": "string",
      "description": "Título de la película"
    },
    "descripcion": {
      "type": "string",
      "description": "Descripcion de la película"
    },
    "year": {
      "type": "integer",
      "maximum": 2026,
      "description": "Año de estreno"
    },
    "actores": {
      "type": "array",
      "uniqueItems": true,
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "description": "Lista de actores principales"
    },
    "directores": {
      "type": "array",
      "uniqueItems": true,
      "minItems": 1,
      "items": {
        "type": "string"
      },
      "description": "Nombre del director"
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 10,
      "description": "Score de reviews"
    }
  }
}

